<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signoutfragmentlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#524cff"
    android:orientation="vertical">

    <TextView
        android:text="You are signed in just click on sign out button if you donot liked to be signed in."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultsigninconf" />

    <Button
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:text="Sign Out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signoutbtnfragment"
        android:elevation="1dp" />

</LinearLayout>